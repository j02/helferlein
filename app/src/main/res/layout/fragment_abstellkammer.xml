<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="de.bjoern.helferlein.Wohnzimmer">

    <TextView
        android:text="Abstellkammer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Transceiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relais1Label"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="false"
        android:layout_centerInParent="false"
        android:layout_marginTop="200dp" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relais1Button"
        android:textAllCaps="false"
        android:layout_alignBaseline="@+id/relais1Label"
        android:layout_alignParentLeft="false"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="170dp" />

    <TextView
        android:text="3D-Drucker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relais1Button"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:id="@+id/relais2Label" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relais2Button"
        android:layout_alignBaseline="@+id/relais2Label"
        android:layout_alignEnd="@+id/relais1Button" />

    <TextView
        android:text="Licht"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relais2Button"
        android:layout_marginTop="20dp"
        android:id="@+id/relais3Label"
        android:layout_alignParentStart="true" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relais3Button"
        android:layout_alignBaseline="@+id/relais3Label"
        android:layout_alignEnd="@+id/relais2Button" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:id="@+id/progress"
        android:visibility="gone"  />

</RelativeLayout>
